{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist/js",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "jsx": "react", // or "react-jsx"
      "types": ["node", "express"],
      "skipLibCheck": true
    },
    "include": ["src/**/*", "server.ts"],
    "exclude": ["__Tests__/*.ts", "node_modules", ".vscode", "**/*.test.ts", "**/*.test.tsx", "jest.config.js"]
  }
  